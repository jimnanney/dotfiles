[user]
  name = Jim Nanney
  email = jnanney@gmail.com
  signingkey = ~/.ssh/id_rsa.pub
[http]
  sslVerify = false
[core]
  excludesfile = ~/.config/git/ignore
  attributesfile = ~/.config/git/attributes
[color]
  ui = auto
[diff "ruby"]
  funcname = "^ *\\(\\(def\\) .*\\)"
[alias]
  sts = status -sb
  head = !git l -1
  h = !git head
  ctags = !$(git rev-parse --git-dir)/hooks/ctags
  rubocop = !git diff --name-only | grep '\\.rb$' | xargs rubocop -a
;  cop = !git status -s | grep -v "^ D" | grep "\.rb" | cut -f2 -d" " | xargs rubocop -a
  gemtags = !ctags -R --languages=ruby --exclude=.git -f $(git rev-parse --show-toplevel)/.gemtags $(bundle list --paths|grep -v rubies)
  recent = branch --sort=-committerdate
  who = !git config user.name
  find = log --pretty=\"format:%C(bold green)%H %C(bold blue)%s\" --name-status --grep
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[init]
  templatedir = ~/.config/git/template
  defaultBranch = main
[rerere]
  enabled = true
[rebase]
  autosquash = true
[branch "main"]
  mergeoptions = --ff-only
[gpg]
  format = ssh
